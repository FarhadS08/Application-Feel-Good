<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            padding:15, 15
            spacing: 20,20
            cols:1
            Label:
                text:"User Login"
                font_size:'20sp'
            TextInput:
                id:username
                hint_text: 'Username'
        
            TextInput:
                id:password
                hint_text:'Password'
                password: True
            RelativeLayout:
                Button:
                    text:'Login'
                    on_press:root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.2, 0.6
                    pos_hint:{'center_x':0.5, 'center_y': 0.6}

            Label:
                id:login_wrong
                text:''
        GridLayout:
            cols:2
            size_hint:0.2, 0.2
            padding:10, 10
            spacing: 10, 0
            Button:
                text:'Forgot Password?'
                background_color: 1,1,1,0
                opacity: 1 if self.state =='normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press:root.forgot_screen()
                
            Button:
                text:'Sign Up'
                background_color: 1,1,1,0
                opacity: 1 if self.state =='normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        padding:20,20
        spacing:20,20
        cols:1
        Label:
            text:'Sign Up For Space Journey!'
        TextInput:
            id: username
            hint_text:'Username'
        TextInput:
            id: password
            hint_text:'Password'
        TextInput:
            id:birthday
            hint_text:'EG-11/04/1990'
        Button:
            text:'Submit'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text, root.ids.birthday.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        padding: 20,20
        spacing: 20, 20
        Label:
            text:'Sign Up Successful!'
            font_size: '30sp'
        RelativeLayout:
            Button:
                text:'Login page'
                on_press:root.go_to_login()
                size_hint: 0.8, 0.6
                pos_hint:{'center_x':0.5, 'center_y': 0.6}


<LoginScreenSuccess>:
    GridLayout:
        padding: 30,30
        spacing: 30,30
        cols:1
        RelativeLayout:
            ImageButton:
                on_press:root.log_out()
                source:'/home/toxic008/Desktop/Python/Application(Feel-Good)/logout_hover.png' if self.hovered else '/home/toxic008/Desktop/Python/Application(Feel-Good)/logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint:{'center_x': 0.93, 'center_y': 0.8}

        Label:
            text: 'How do you feel?'
        TextInput:
            id:feeling
            hint_text:'Things to say:happy,sad,unloved...'
        RelativeLayout:
            Button:
                text: 'Enlighten me'
                size_hint: 0.8, 0.6
                pos_hint: {'center_x':0.5, 'center_y':0.6}
                on_press:root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text:''
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
<ForgotPassword>:
    GridLayout:
        cols:1
        Label:
            text: "What was your Username?"
        TextInput:
            id: username
            hint_text: "Username:"
        Label:
            text: "What was your Date of Birth?"
        TextInput:
            id: birthday
            hint_text: "Date of Birth"
        Button:
            text: "Submit"
            on_press:root.get_password(root.ids.username.text, root.ids.birthday.text)
        Label:
            id:passw
            text:''


<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name:'sign_up_screen'
    SignUpScreenSuccess:
        name:'sign_up_screen_success'
    LoginScreenSuccess:
        name:'login_screen_success'
    ForgotPassword:
        name:'forgot_screen'




